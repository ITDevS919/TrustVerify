{
  "name": "trustverify-backend",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "cross-env NODE_ENV=development tsx index.ts",
    "build": "esbuild index.ts --platform=node --packages=external --bundle --format=esm --outdir=dist",
    "start": "cross-env NODE_ENV=production node dist/index.js",
    "check": "tsc",
    "db:push": "drizzle-kit push",
    "db:create-tables": "tsx scripts/create-tables.ts",
    "seed:templates": "tsx scripts/seed-industry-templates.ts",
    "seed:plans": "tsx scripts/seed-subscription-plans.ts",
    "db:setup": "npm run db:create-tables && npm run seed:templates && npm run seed:plans",
    "test": "cross-env NODE_ENV=test jest",
    "test:watch": "cross-env NODE_ENV=test jest --watch",
    "test:coverage": "cross-env NODE_ENV=test jest --coverage",
    "test:unit": "cross-env NODE_ENV=test jest --testPathPattern=unit",
    "test:integration": "cross-env NODE_ENV=test jest --testPathPattern=integration",
    "test:security": "cross-env NODE_ENV=test jest --testPathPattern=security",
    "test:load": "k6 run tests/load/k6-load-test.js",
    "test:stress": "k6 run tests/load/stress-test.js",
    "test:e2e": "playwright test",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:security",
    "db:index": "psql $DATABASE_URL -f migrations/add-indexes.sql",
    "db:optimize": "node -e \"require('./services/query-optimizer').queryOptimizer.vacuumTables()\""
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.948.0",
    "@aws-sdk/client-secrets-manager": "^3.940.0",
    "@aws-sdk/s3-request-presigner": "^3.948.0",
    "@neondatabase/serverless": "^0.10.4",
    "@sendgrid/mail": "^8.1.6",
    "argon2": "^0.43.0",
    "aws-sdk": "^2.1692.0",
    "connect-pg-simple": "^10.0.0",
    "dotenv": "17.2.3",
    "drizzle-orm": "^0.39.3",
    "drizzle-zod": "^0.7.1",
    "express": "^4.21.2",
    "express-async-errors": "^3.1.1",
    "express-rate-limit": "^7.5.0",
    "express-session": "^1.18.1",
    "helmet": "^8.1.0",
    "memorystore": "^1.6.7",
    "multer": "^2.0.1",
    "nanoid": "^5.0.4",
    "openid-client": "^6.6.1",
    "passport": "^0.7.0",
    "passport-apple": "^2.0.2",
    "passport-facebook": "^3.0.0",
    "passport-github2": "^0.1.12",
    "passport-google-oauth20": "^2.0.0",
    "passport-local": "^1.0.0",
    "pg": "^8.16.3",
    "pino": "^9.7.0",
    "pino-http": "^10.5.0",
    "pino-pretty": "^13.0.0",
    "redis": "^4.7.0",
    "stripe": "^18.2.1",
    "uuid": "^11.1.0",
    "ws": "^8.18.0",
    "zod": "^3.25.76",
    "zod-validation-error": "^3.4.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.48.0",
    "@types/connect-pg-simple": "^7.0.3",
    "@types/express": "4.17.21",
    "@types/express-session": "^1.18.0",
    "@types/jest": "^29.5.14",
    "@types/memoizee": "^0.4.12",
    "@types/multer": "^1.4.12",
    "@types/node": "20.16.11",
    "@types/nodemailer": "^7.0.4",
    "@types/passport": "^1.0.16",
    "@types/passport-google-oauth20": "^2.0.16",
    "@types/passport-local": "^1.0.38",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.5.13",
    "cross-env": "^7.0.3",
    "drizzle-kit": "^0.30.6",
    "esbuild": "^0.25.0",
    "jest": "^29.7.0",
    "memoizee": "^0.4.17",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.6",
    "tsx": "^4.19.1",
    "typescript": "5.6.3"
  },
  "optionalDependencies": {
    "airtable": "^0.12.2",
    "bufferutil": "^4.0.8",
    "firebase-admin": "^13.6.0",
    "googleapis": "^144.0.0"
  }
}
